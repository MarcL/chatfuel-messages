{
    "name": "chatfuel-messages",
    "version": "0.0.0",
    "description": "Message builder for Chatfuel messages",
    "main": "lib/index.js",
    "repository": "git@github.com:MarcL/chatfuel-messages.git",
    "author": "Marc Littlemore <marc.littlemore@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "babel src -d lib",
        "lint": "eslint src test",
        "prepublish": "yarn lint && yarn test && yarn build",
        "test": "mocha"
    },
    "dependencies": {},
    "devDependencies": {
        "babel-cli": "~6.26.0",
        "babel-preset-env": "~1.6.1",
        "babel-register": "~6.26.0",
        "chai": "~4.1.2",
        "eslint": "~4.19.1",
        "eslint-config-airbnb-base": "~12.1.0",
        "eslint-plugin-import": "~2.10.0",
        "husky": "~0.14.3",
        "lint-staged": "~7.0.4",
        "mocha": "~5.0.5",
        "prettier": "1.11.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint && lint-staged",
            "pre-push": "yarn test"
        }
    },
    "lint-staged": {
        "*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
